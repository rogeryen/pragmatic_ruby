<%= form_with(model: movie) do |f| %>
  <%= render "shared/errors", object: movie %>


  <%= f.label :title, "Title", autofocus: true %>
  <%= f.text_field :title %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description, rows: 7 %>

  <%= f.label :director, "Director" %>
  <%= f.text_field :director %>

  <%= f.label :duration, "Duration" %>
  <%= f.text_field :duration %>

  <%= f.label :image_file_name, "Image file name" %>
  <%= f.text_field :image_file_name %>

  <%= f.label :rating, "Rating" %>
  <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>

  <%= f.label :released_on, "Released on" %>
  <%= f.date_field :released_on %>

  <%= f.label :total_gross, "Total gross" %>
  <%= f.number_field :total_gross %>

  <%= f.submit %>
<% end %>
